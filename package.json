{
  "name": "QPPW",
  "private": true,
  "version": "0.0.0",
  "description": "Interactive quantum mechanics simulation exploring bound states in potential wells with real-time solutions to the 1D SchrÃ¶dinger equation.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/veillette/QPPW.git"
  },
  "bugs": {
    "url": "https://github.com/veillette/QPPW/issues"
  },
  "homepage": "https://github.com/veillette/QPPW#readme",
  "type": "module",
  "keywords": [
    "quantum physics",
    "physics",
    "simulation",
    "SceneryStack",
    "interactive",
    "education"
  ],
  "scripts": {
    "start": "npx vite",
    "dev": "npx vite",
    "build": "npx tsc --noEmit && npx vite build",
    "preview": "npx vite preview",
    "test": "tsx --tsconfig tsconfig.test.json --import ./tests/browser-globals.js tests/run-terminal-tests.js",
    "test:double-well": "tsx --tsconfig tsconfig.test.json --import ./tests/browser-globals.js tests/test-double-well.ts",
    "test:coulomb": "tsx --tsconfig tsconfig.test.json --import ./tests/browser-globals.js tests/verify-coulomb.ts",
    "test:multi-square-well": "tsx --tsconfig tsconfig.test.json --import ./tests/browser-globals.js tests/test-multi-square-well.ts",
    "test:multi-coulomb-1d": "tsx --tsconfig tsconfig.test.json --import ./tests/browser-globals.js tests/test-multi-coulomb-1d.ts",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "fix": "npx eslint --fix . && npx prettier --write .",
    "release": "npm version patch && git push && git push --tags",
    "check": "npx tsc --noEmit",
    "check:tsc": "npx tsc --noEmit",
    "serve": "npx serve -s dist",
    "watch": "npx tsc --watch",
    "watch:tsc": "npx tsc --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20251105.1",
    "katex": "^0.16.25",
    "scenerystack": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.17.0",
    "globals": "^15.15.0",
    "prettier": "^3.4.2",
    "tsx": "^4.20.6",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.46.4",
    "vite": "^5.4.10",
    "vite-plugin-singlefile": "^2.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "phet-io": {
    "validation": false,
    "compareDesignedAPIChanges": false
  }
}
